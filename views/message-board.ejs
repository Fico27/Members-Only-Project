<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Message Board</title>
    <link rel="stylesheet" href="/styles/messageboard.css" />
  </head>
  <body>
    <header>
      <h1><i>The</i> Member Club</h1>
      <ul>
        <li><a href="/newmessage">New Message</a></li>
        <li>
          <a href="/newmember">Become a <i>Member</i></a>
        </li>
      </ul>
    </header>
    <main>
      <!--Populate the page with messages here -->

      <% if(messages.length === 0) {%>
      <p>No messages posted. Go ahead and post one!</p>
      <% } else { %>
      <div class="message-container">
        <% messages.forEach((message) => { %>
        <div class="message">
          <h2><%=message.title %></h2>
          <p><%= message.message %></p>
          <% if(user && user.membership_status) { %>
          <p><b>Posted by: </b> <%= user.first_name %> <%= user.last_name %></p>
          <b><sub><%= message.timestamp %></sub></b>
          <% }%> <% if(user.admin_status){ %>
          <form
            action="/messageboard/delete/<%=message.message_id%>"
            method="post"
          >
            <button class="delete" type="submit">Delete</button>
          </form>
          <%} %>
        </div>
        <% }) %>
      </div>
      <% } %>
    </main>
  </body>
</html>
